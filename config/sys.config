[
    {lashup, [
        {work_dir, "/var/lib/dcos/navstar/lashup"}
    ]},

    {mnesia, [
        {dir, "/var/lib/dcos/navstar/mnesia"},
        {dump_log_write_threshold, 10}
    ]},

    {dcos_rest, [
      {ip, {127, 0, 0, 1}},
      {port, 62080}
    ]},

    {dcos_dns, [
        {mesos_resolvers, []},
        {upstream_resolvers, [
            {{1, 1, 1, 1}, 53},
            {{1, 0, 0, 1}, 53}
        ]},
        {udp_port, 8053},
        {tcp_port, 8053}
    ]},

    {erldns,[
        {servers, []},
        {use_root_hints, false},
        {catch_exceptions, false},
        {zones, "data/zones.json"},
        {packet_cache, [
            {enabled, false}
        ]},
        {pools, []}
    ]},

    {kernel, [
        {logger_level, error},
        {logger, [
            {handler, default, logger_std_h,
                #{formatter => {logger_formatter, #{
                    depth => 100,
                    max_size => 10000
                }}}
            }
        ]}
    ]},

    {lager, [
        {error_logger_hwm, 1000},
        {async_threshold, 1000},
        {log_root, "log"},
        {handlers, [
            {lager_console_backend, [
                {level, notice}
            ]},
            {lager_file_backend, [
                {file, "error.log"},
                {level, notice},
                {formatter, lager_default_formatter},
                {formatter_config, [
                    date, " ",
                    time, " ",
                    "[", severity, "] ",
                     {pid, ""},
                     {module, [
                         {pid, ["@"], ""},
                         module,
                         {function, [":", function], ""},
                         {line, [":",line], ""}
                    ], ""},
                     " ", message, "\n"
                ]}
            ]}
        ]}
    ]},

    {telemetry, [
        {is_aggregator, false},
        {forward_metrics, true},
        {receive_metrics, false},
        {interval_seconds, 60},
        {splay_seconds, 20}
    ]},

    {setup, [
        {verify_directories, false}
    ]}
].
