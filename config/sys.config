[
    {lashup, [
        {work_dir, "/var/lib/dcos/navstar/lashup"}
    ]},

    {mnesia, [
        {dir, "/var/lib/dcos/navstar/mnesia"}
    ]},

    {dcos_rest, [
      {ip, {127, 0, 0, 1}},
      {port, 62080}
    ]},

    {dcos_l4lb, [
        {master_uri, "http://leader.mesos:80/cache/master/state.json"},
        {enable_networking, true}
    ]},

    {dcos_dns, [
        {mesos_resolvers, []},
        {upstream_resolvers, [
            {{8, 8, 8, 8}, 53},
            {{8, 8, 4, 4}, 53},
            {{1, 1, 1, 1}, 53}
        ]},
        {exhibitor_url, "http://master.mesos:8181/exhibitor/v1/cluster/status"},
        {udp_port, 8053},
        {tcp_port, 8053}
    ]},

    {erldns,[
        {servers, []},
        {use_root_hints, false},
        {catch_exceptions, false},
        {zones, "data/zones.json"},
        {pools, []}
    ]},

    {kernel, [
        {start_pg2, true},
        {start_timer, true}
    ]},

    {lager, [
        {log_root, "log"},
        {handlers, [
            {lager_console_backend, [
                {level, error}
            ]},
            {lager_file_backend, [
                {file, "error.log"},
                {level, error},
                {formatter, lager_default_formatter},
                {formatter_config, [
                    date, " ",
                    time, " ",
                    "[", severity, "] ",
                     {pid, ""},
                     {module, [
                         {pid, ["@"], ""},
                         module,
                         {function, [":", function], ""},
                         {line, [":",line], ""}
                    ], ""},
                     " ", message, "\n"
                ]}
            ]}
        ]}
    ]},

    {sasl, [
        {sasl_error_logger, {file, "log/sasl.log"}},
        {errlog_type, error},
        {error_logger_mf_dir, "log/sasl"},      % Log directory
        {error_logger_mf_maxbytes, 10485760},   % 10 MB max file size
        {error_logger_mf_maxfiles, 5}           % 5 files max
    ]},

    {telemetry, [
        {is_aggregator, false},
        {forward_metrics, true},
        {receive_metrics, false},
        {interval_seconds, 60},
        {splay_seconds, 20}
    ]}
].
